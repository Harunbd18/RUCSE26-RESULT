doctype html
html
    head
        block head
            meta(charset='UTF-8')
            meta(http-equiv='X-UA-Compatible' content='IE=Edge')
            meta(content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport')
            title #{title}
                
            //- Favicon
            link(rel='shortcut icon' type='image/x-icon' href='/backend/assets/images/logo.png')
                
            //- Google Fonts
            link(href='https://fonts.googleapis.com/css?family=Roboto:400,700&subset=latin,cyrillic-ext' rel='stylesheet' type='text/css')
            link(href='https://fonts.googleapis.com/icon?family=Material+Icons' rel='stylesheet' type='text/css')

            //- Bootstrap Core Css
            link(href='/backend/assets/plugins/bootstrap/css/bootstrap.css' rel='stylesheet')
            
            //- Bootstrap Select Css
            link(href='/backend/assets/plugins/bootstrap-select/css/bootstrap-select.css' rel='stylesheet')

            //- Waves Effect Css
            link(href='/backend/assets/plugins/node-waves/waves.css' rel='stylesheet')

            //- Animation Css
            link(href='/backend/assets/plugins/animate-css/animate.css' rel='stylesheet')

            //- Morris Chart Css
            link(href='/backend/assets/plugins/morrisjs/morris.css' rel='stylesheet')
            
            //- JQuery DataTable Css
            link(href='/backend/assets/plugins/jquery-datatable/skin/bootstrap/css/dataTables.bootstrap.css' rel='stylesheet')
        
            //- Custom Css
            link(href='/backend/assets/css/style.css' rel='stylesheet')

            //- AdminBSB Themes. You can choose a theme from css/themes instead of get all themes 
            link(href='/backend/assets/css/themes/all-themes.css' rel='stylesheet')
                   
    
    //Body
    body.theme-teal
        // Page Loader
        include _pageLoader
        // Top Bar
        include _topBar
        // Left Side Bar
        include _sideLeftBar
        
        
        section.content
            .container-fluid
                .block-header
                    
                block adminDashboard    
                
            block content
        
        // Jquery Core Js
        script(src='/backend/assets/plugins/jquery/jquery.min.js')
        
        // Bootstrap Core Js
        script(src='/backend/assets/plugins/bootstrap/js/bootstrap.js')
        
        // Select Plugin Js
        script(src='/backend/assets/plugins/bootstrap-select/js/bootstrap-select.js')
        
        // Slimscroll Plugin Js
        script(src='/backend/assets/plugins/jquery-slimscroll/jquery.slimscroll.js')
        
        // Waves Effect Plugin Js
        script(src='/backend/assets/plugins/node-waves/waves.js')
        
        // Morris Plugin Js
        script(src='/backend/assets/plugins/raphael/raphael.min.js')
        script(src='/backend/assets/plugins/morrisjs/morris.js')
        
        // Jquery DataTable Plugin Js
        script(src='/backend/assets/plugins/jquery-datatable/jquery.dataTables.js')
        script(src='/backend/assets/plugins/jquery-datatable/skin/bootstrap/js/dataTables.bootstrap.js')
        script(src='/backend/assets/plugins/jquery-datatable/extensions/export/dataTables.buttons.min.js')
        script(src='/backend/assets/plugins/jquery-datatable/extensions/export/buttons.flash.min.js')
        script(src='/backend/assets/plugins/jquery-datatable/extensions/export/jszip.min.js')
        script(src='/backend/assets/plugins/jquery-datatable/extensions/export/pdfmake.min.js')
        script(src='/backend/assets/plugins/jquery-datatable/extensions/export/vfs_fonts.js')
        script(src='/backend/assets/plugins/jquery-datatable/extensions/export/buttons.html5.min.js')
        script(src='/backend/assets/plugins/jquery-datatable/extensions/export/buttons.print.min.js')
        
        //- // Custom Js
        script(src='/backend/assets/js/admin.js')
        //script(src='/backend/assets/js/pages/index.js')
        script(src='/backend/assets/js/pages/tables/jquery-datatable.js')
        
        // Demo Js
        script(src='/backend/assets/js/demo.js')
        
        // App Js
        script(src='/backend/js/bundle.js')
        
        
    
    
    
    
        
        
    


